<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.1.xsd">

    <bean id="jdbcTemplateBean" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="hsqlTestDB" />
    </bean>

    <jdbc:embedded-database id="hsqlTestDB">
        <jdbc:script execution="INIT" location="mysql/init-service-catalog_db.sql"/>
        <jdbc:script execution="DESTROY" location="mysql/drop_service_catalog_db.sql"/>
    </jdbc:embedded-database>

</beans>
