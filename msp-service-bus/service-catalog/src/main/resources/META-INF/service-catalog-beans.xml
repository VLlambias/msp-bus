<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="serviceCatalogBean" class="gub.msp.bus.servicecatalog.BasicServiceCatalog" >
        <constructor-arg name="jdbcTemplate" ref="jdbcTemplateBean"/>
    </bean>

    <bean id="jdbcTemplateBean" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="serviceCatalogDataSource" />
    </bean>

    <bean id="serviceCatalogDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="dataSourceName" value="ServiceCatalogDataSource"/>
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/service_catalog"/>
        <property name="user" value="root"/>
        <property name="password" value="mysql"/>
        <property name="initialPoolSize" value="10"/>
        <property name="minPoolSize" value="10" />
        <property name="maxPoolSize" value="20" />
        <property name="maxStatements" value="10" />
        <property name="maxIdleTime" value="120000" />
        <property name="testConnectionOnCheckout" value="true" />
        <property name="preferredTestQuery" value="select * from services limit 1"/>
    </bean>
</beans>
